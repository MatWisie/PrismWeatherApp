<UserControl x:Class="PrismWeatherApp.Temperature.Views.ViewA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PrismWeatherApp.Temperature.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:core="clr-namespace:PrismWeatherApp.Core;assembly=PrismWeatherApp.Core"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.SearchRegion}" />
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.HourlyTemperatureRegion}"
                        Grid.Row="1" />
    </Grid>
</UserControl>
